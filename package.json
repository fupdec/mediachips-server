{
  "name": "mediachips-server",
  "productName": "mediaChips-server",
  "version": "0.5.0",
  "author": {
    "name": "fupdec",
    "email": "altbbk@gmail.com"
  },
  "homepage": "https://github.com/fupdec/mediaChips",
  "description": "Organize your media files with ease and convenience.",
  "private": false,
  "license": "GPL-3.0",
  "repository": "github:fupdec/mediaChips",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "server": "node server.js",
    "server-dev": "nodemon --watch server.js --watch api server.js",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "portable": "electron-builder --win portable",
    "dist": "electron-builder"
  },
  "main": "main.js",
  "dependencies": {
    "@mdi/font": "^6.4.95",
    "archiver": "^5.3.0",
    "axios": "^0.24.0",
    "chokidar": "^3.5.3",
    "connect-history-api-fallback": "^1.6.0",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-ws": "^5.0.2",
    "ffmpeg-static": "^4.4.0",
    "ffprobe-static": "^3.0.0",
    "filepond-plugin-file-encode": "^2.1.10",
    "filepond-plugin-file-validate-type": "^1.2.6",
    "fluent-ffmpeg": "^2.1.2",
    "jimp": "^0.16.1",
    "lodash": "^4.17.21",
    "node-machine-id": "^1.1.12",
    "node-stream-zip": "^1.15.0",
    "sequelize": "^6.11.0",
    "sqlite3": "^5.0.2",
    "string-crypto": "^2.0.2",
    "umzug": "^3.0.0",
    "vue": "^2.6.11",
    "vue-advanced-cropper": "^1.10.1",
    "vue-filepond": "^6.0.3",
    "vue-router": "^3.5.3",
    "vuedraggable": "^2.24.3",
    "vuetify": "^2.5.10",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "babel-eslint": "^10.1.0",
    "electron": "^16.0.4",
    "electron-builder": "^22.14.5",
    "nodemon": "^2.0.15",
    "sass": "~1.32",
    "sass-loader": "^8.0.2",
    "vue-template-compiler": "^2.6.11"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "build": {
    "directories": {
      "output": "release"
    },
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "asar": false,
    "files": [
      "!userfiles",
      "!src"
    ],
    "win": {
      "target": "nsis",
      "verifyUpdateCodeSignature": false,
      "icon": "public/icons/icon.png",
      "asarUnpack": [
        "node_modules/@ffmpeg-installer",
        "node_modules/@ffprobe-installer"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "icon": "public/icons/icons.icns",
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "mac": {
      "icon": "public/icons/icons.icns",
      "asar": true,
      "asarUnpack": [
        "node_modules/@ffmpeg-installer",
        "node_modules/@ffprobe-installer"
      ]
    }
  }
}
